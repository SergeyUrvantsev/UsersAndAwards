@page "{id:Guid}"
@model UsersAndAwards.PL.WebApp.Pages.Users.DetailsUserModel
@{
	ViewData["Title"] = "Details user";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Age)
        </dd>

        <table class="table">
            <thead>
                <tr>
                    <th>
                     Title
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model.User.Awards) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </dl>
</div>

<div>

    <a asp-page="UsersList">Back to List</a> |
    @if(User.IsInRole("admin"))
        {
            <a asp-page="EditUser" asp-route-id="@Model.User.Id">Edit</a> 
        }
</div>